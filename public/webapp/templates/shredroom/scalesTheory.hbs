    <div class="row clear-marg">
        <div class="col-sm-6">
            <div class="pull-right"><button class="btn" data-event="add">Add Scale</button></div>
            <ul class="nice-rows">
                {{#each collection}}
                <li class="row pointer" data-event="scale" data-model="{{@index}}">
                    <h5 class="lead clear-marg">{{title}}</h5>
                    <p class="font-xsmall">3 positions - 120 examples</p>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6 up-video">
          <section data-region="scale">
          </section>
        </div>
    </div>
</div>



